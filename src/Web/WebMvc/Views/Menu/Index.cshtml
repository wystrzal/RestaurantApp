@model WebMvc.ViewModels.MenuViewModel


<h1>Menu Panel</h1>

<div class="col-12 text-left">
    @Html.ActionLink("Create Menu Item", "CreateItem", "Menu", null, new { @class = "btn btn-success" })
    @Html.ActionLink("Create Menu Type", "CreateType", "Menu", null, new { @class = "btn btn-success pl-2" })
</div>

<partial name="_MenuType" model="Model" />

<div class="row text-center pt-3 pb-1">
    <div class="col-md-4">
        <h6>Name:</h6>
    </div>
    <div class="col-md-2">
        <h6>Price:</h6>
    </div>
    <div class="col-md-6">
        <h6>Description:</h6>
    </div>
</div>
@foreach (var item in Model.MenuItem)
{
    <div class="row text-center">
        <div class="col-md-4 col-12">
            @item.Name
        </div>
        <div class="col-md-2 col-12">
            @item.Price$
        </div>
        <div class="col-md-6 col-12">
            @item.Description
        </div>
    </div>
}


 